@using Sandbox;
@using Sandbox.UI;
@namespace Grubs.UI
@inherits Panel
@attribute [StyleSheet]

<root>
    <image src="textures/ui/grubs_logo.png" class="logo" />
    <div style="height: 15%;" />
    <section class="buttons">
        <button class="menu-button" icon="play_arrow" onclick="@Game.Menu.HideMenu">Resume</button>
        <button class="menu-button" icon="close" onclick="@Game.Menu.Close">Quit</button>
    </section>
</root>

@code {
    public InGameMenu()
    {
        BindClass("hidden", () => Game.Menu.IsLoading);
    }
}