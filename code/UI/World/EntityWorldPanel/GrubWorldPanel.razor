@inherits EntityWorldPanel
@namespace Grubs

@if (Entity is not Grub grub)
{
    return;
}

<root style="color: @grub.Player.Preferences.Color.Hex">
    <text>@grub.Name</text>
    <texT>@((int)grub.Health)</texT>
</root>

@code {
    public GrubWorldPanel(Grub grub) : base(grub) {}

    protected override int BuildHash()
    {
        var grub = Entity as Grub;
        return HashCode.Combine(grub?.Name, grub?.Health);
    }
}

<style>
    GrubWorldPanel {
        align-items: center;
        justify-content: center;
        flex-direction: column;

        label {
            font-size: 150px;
            font-family: Londrina Solid;
            background-color: rgba( black, 0.1 );
            border: 2px solid rgba( black, 0.1 );
            border-radius: 4px;
            padding: 0px 20px;
            text-shadow: 2px 2px 0px rgba( black, 0.75 );
            margin: 2px 0;
        }
    }
</style>