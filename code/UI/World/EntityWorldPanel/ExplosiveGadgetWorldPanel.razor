@inherits EntityWorldPanel
@namespace Grubs

<root>
    <text>@TimeSpan.FromSeconds(_timeUntilExplosion).Seconds</text>
</root>

@code {
    private TimeUntil _timeUntilExplosion;

    public ExplosiveGadgetWorldPanel(Gadget gadget) : base(gadget) 
    {
        _timeUntilExplosion = gadget.Components.Get<ExplosiveGadgetComponent>().TimeUntilExplosion;
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(_timeUntilExplosion.ToString());
    }
}

<style>
    ExplosiveGadgetWorldPanel {
        align-items: center;
        justify-content: center;
        flex-direction: column;

        label {
            color: white;
            font-size: 150px;
            font-family: Londrina Solid;
            background-color: rgba( black, 0.1 );
            border: 2px solid rgba( black, 0.1 );
            border-radius: 5px;
            padding: 0px 20px;
            text-shadow: 2px 2px 0px rgba( black, 0.75 );
            margin: 2px 0;
        }
    }
</style>