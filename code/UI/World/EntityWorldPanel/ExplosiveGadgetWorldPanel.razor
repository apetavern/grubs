@inherits EntityWorldPanel
@namespace Grubs

@if (Entity is not Gadget gadget)
{
    return;
}

<root>
    <text>@_explosiveComponent.ExplodeAfter</text>
</root>

@code {
    private ExplosiveGadgetComponent _explosiveComponent;

    public ExplosiveGadgetWorldPanel(Gadget gadget) : base(gadget) 
    {
        _explosiveComponent = gadget.Components.Get<ExplosiveGadgetComponent>();
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(_explosiveComponent?.ExplodeAfter);
    }
}

<style>
    ExplosiveGadgetWorldPanel {
        align-items: center;
		justify-content: center;
        flex-direction: column;

        label {
            color: white;
            font-size: 150px;
            font-family: Londrina Solid;
            background-color: rgba( black, 0.1 );
            border: 2px solid rgba( black, 0.1 );
            border-radius: 5px;
            padding: 0px 20px;
            text-shadow: 2px 2px 0px rgba( black, 0.75 );
            margin: 2px 0;
        }
    }
</style>