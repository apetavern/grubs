@namespace Grubs.UI.Components

@using Grubs.Gamemodes
@using Grubs.Gamemodes.Modes
@using Grubs.UI.Inventory
@using Grubs.UI.TurnInfo
@using Grubs.Pawn

@inherits PanelComponent

<root>
    @if (IsProxy)
        return;

    <Cursor />

    <PlayerList />
    <InventoryDisplay Inventory="@Inventory" />
    <TurnTimer />
</root>

@code
{
    [Property] public required PlayerInventory Inventory { get; set; }

    protected override void OnUpdate()
    {
        base.OnUpdate();

        SetClass("hide", !Gamemode.FFA.Started);
    }
}