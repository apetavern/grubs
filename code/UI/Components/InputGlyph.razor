@namespace Grubs.UI

<root />

@code {
    private string _inputAction;
    private InputGlyphSize _inputGlyphSize;
    private GlyphStyle _glyphStyle;

    public void SetButton(string inputAction)
    {
        if (_inputAction == inputAction)
            return;

        _inputAction = inputAction;
        Update();
    }

    public override void SetProperty(string name, string value)
    {
        switch (name)
        {
            case "button":
                {
                    SetButton(value);
                    Update();

                    break;
                }

            case "size":
                {
                    InputGlyphSize.TryParse(value, true, out _inputGlyphSize);
                    Update();

                    break;
                }

            case "style":
                {
                    _glyphStyle = value switch
                    {
                        "knockout" => GlyphStyle.Knockout,
                        "light" => GlyphStyle.Light,
                        "dark" => GlyphStyle.Dark,
                        _ => _glyphStyle
                    };

                    Update();
                    break;
                }
        }

        base.SetProperty(name, value);
    }

    private void Update()
    {
        // TODO: Rever this change, going to make a s&box issue for this.
        // For some reason keyboard buttons are larger...
        var isMouseButton = _inputAction == InputAction.Fire || _inputAction == InputAction.CameraPan || _inputAction == InputAction.CameraReset;
        var texture = Input.GetGlyph(_inputAction, _inputGlyphSize, _glyphStyle);
        Style.BackgroundImage = texture;
        Style.Width = isMouseButton ? texture.Width : texture.Width / 2.6f;
        Style.Height = isMouseButton ? texture.Height : texture.Height / 2.6f;
    }
}

<style>
    InputGlyph {
        background-size: cover;
    }
</style>