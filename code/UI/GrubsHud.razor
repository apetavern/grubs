@namespace Grubs.UI
@inherits RootPanel

@attribute [StyleSheet("/ui/GrubsHud.scss")]

<root>
    @* Global *@
    <Cursor />

    @* In-game UI *@
    <PlayerList />
    <TurnIndicator />
    <Inventory />
    <WindIndicator />
    <InputHints />

    @* Main Menu *@
    <MainMenu />
</root>

@code
{
    public GrubsHud()
    {
        Game.AssertClient();
        Game.RootPanel = this;

        _ = new AimReticle();
        _ = new GrubDamageManager();
    }
}

<style>
    GrubsHud {
        pointer-events: none;
        cursor: none;
    }
</style>
