@namespace Grubs.UI
@inherits RootPanel

@attribute [StyleSheet]

<root>
    @* Global *@
    <Cursor />

    @if (GamemodeSystem.Instance?.CurrentState == Gamemode.State.Playing)
    {
        @* In-game UI *@
        <PlayerList />
        <TurnIndicator />
        <Inventory />
        <WindIndicator />
		<SuddenDeathIndicator />
        <InputHints />
    }
    else
    {
        @* Main Menu *@
        <MainMenu />
    }
</root>

@code
{
    public GrubsHud()
    {
        Game.AssertClient();
        Game.RootPanel = this;

        _ = new AimReticle();
        _ = new GrubDamageManager();
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(GamemodeSystem.Instance?.CurrentState.GetHashCode());
    }
}
