@namespace Grubs.UI
@inherits RootPanel

@attribute [StyleSheet("/ui/GrubsHud.scss")]

<root>
    @if (GamemodeSystem.Instance.CurrentState == Gamemode.State.Playing)
    {
        <PlayHud />
    }
    else
    {
        <MainMenu />
    }
</root>

@code
{
    public GrubsHud()
    {
        Game.AssertClient();
        Game.RootPanel = this;
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(GamemodeSystem.Instance.CurrentState);
    }
}
